extend type Query {
  article(id: Int!): Article
  tag(id: Int!): Tag
  channel(id: Int!): Channel
  user(id: Int!): User

  page_list(
    type: String
    bundles: [Page]
    limit: Int = 10
    offset: Int = 0
    conditions: [String]
  ): Connection!
}

type Connection {
  total: Int!
  items: [Page!]
}
