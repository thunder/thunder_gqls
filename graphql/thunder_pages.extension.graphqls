input Sorting {
  field: String
  direction: String
}

extend type Query {
  article(id: Int!): Article
  tag(id: Int!): Tag
  channel(id: Int!): Channel
  user(id: Int!): User

  page_list(
    type: String
    bundles: [String]
    offset: Int = 0
    limit: Int = 10
    conditions: [String]
    sorts: [Sorting]
  ): Connection!
}

type Connection {
  total: Int!
  items: [Page!]
}
