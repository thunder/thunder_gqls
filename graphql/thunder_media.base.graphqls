interface Media {
  id: Int!
  uuid: String!
  entity: String!
  name: String
}

interface Image {
  src: String
  width: Int
  height: Int
}

type Thumbnail implements Image {
  src: String
  width: Int
  height: Int
}

type MediaImage implements Media & Image {
  id: Int!
  uuid: String!
  entity: String!
  name: String

  src: String
  width: Int
  height: Int

  title: String
  alt: String
  copyright: String
  description: String
  tags: [Tags]
}

type MediaVideo implements Media {
  id: Int!
  uuid: String!
  entity: String!
  name: String

  src: String
  thumbnail: Thumbnail
  author: String
  caption: String
  copyright: String
  description: String
  source: String
}
