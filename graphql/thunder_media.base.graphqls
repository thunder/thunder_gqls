interface Media {
  id: Int!
  uuid: String!
  entity: String!
  name: String
}

type ImageDerivative {
  url: String
  width: Int
  height: Int
}

type FocalPoint {
  x: Int
  y: Int
}

type MediaImage implements Media {
  id: Int!
  uuid: String!
  entity: String!
  name: String

  title: String
  alt: String
  copyright: String
  description: String
  src: String
  derivative(style: String!): ImageDerivative
  focalPoint: FocalPoint
  width: Int
  height: Int
  tags: [Tags]
}
